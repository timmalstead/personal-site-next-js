{
    "name": "personal-site-next-js",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "PORT=8080 next dev",
        "build": "next build",
        "start": "PORT=8080 node .next/standalone/server.js",
        "lint": "next lint",
        "test": "npm run lint & npm run e2e",
        "e2e": "playwright test",
        "image:build": "docker build -t personal-site-next-js .",
        "image:run": "docker run -p 8080:8080 --name=personal-site-next-js personal-site-next-js",
        "proxy:preview": "gcloud run services proxy preview-personal-site --port=8081 --region=us-central1"
    },
    "dependencies": {
        "next": "^14.2.4",
        "react": "^18",
        "react-dom": "^18",
        "react-markdown": "^9.0.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.42.1",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "eslint": "^8",
        "eslint-config-next": "14.1.0",
        "prettier": "3.2.5",
        "typescript": "^5"
    }
}
