{
    "name": "personal-site-next-js",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "USE_TESTING_FIRESTORE=true PORT=8080 next dev",
        "build": "next build",
        "postbuild": "cp -r .next/static .next/standalone/.next",
        "start": "PORT=8080 node .next/standalone/server.js",
        "lint": "next lint",
        "type:check": "tsc --noEmit",
        "version:check": "node ./scripts/confirmNodeVersion",
        "test": "npm run version:check & npm run type:check & npm run lint && npm run e2e",
        "e2e": "playwright test",
        "e2e:headed": "playwright test --ui",
        "clear:next": "test -d .next && rm -r .next || echo 'Next.Js build directory does not exist'",
        "secrets:local": "op inject -i env.tpl -o .env",
        "preimage:build:local": "node ./scripts/prepareFirestoreCredsForLocalContainer.js",
        "image:build:local": "docker build -t personal-site-next-js .",
        "postimage:build:local": "git checkout ./app/_data/firestore.ts",
        "image:run:local": "docker run --name=personal-site-next-js -p 8080:8080 --env-file .env personal-site-next-js",
        "proxy:preview": "gcloud run services proxy preview-personal-site --port=8081 --region=us-central1"
    },
    "dependencies": {
        "@google-cloud/firestore": "^7.9.0",
        "next": "^14.2.4",
        "react": "^18",
        "react-dom": "^18",
        "react-markdown": "^9.0.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.42.1",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "eslint": "^8",
        "eslint-config-next": "14.1.0",
        "lorem-ipsum": "^2.0.8",
        "null-loader": "^4.0.1",
        "prettier": "3.2.5",
        "typescript": "^5"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
